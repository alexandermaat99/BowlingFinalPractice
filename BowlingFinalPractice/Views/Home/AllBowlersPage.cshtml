@model IEnumerable<Bowler>

<h2>List of All Bowlers</h2>

<table>
    <thead>
        <tr>
            <th>Bowler ID</th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Middle Initial</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>ZIP</th>
            <th>Phone Number</th>
            <th>Team Id</th>
            <th></th>
        </tr>

    </thead>

    <tbody>
        @foreach (var bowler in Model)
        {
                <tr>
                    <td>@bowler.BowlerId</td>
                    <td>@bowler.BowlerLastName</td>
                    <td>@bowler.BowlerFirstName</td>
                    <td>@bowler.BowlerMiddleInit</td>
                    <td>@bowler.BowlerAddress</td>
                    <td>@bowler.BowlerCity</td>
                    <td>@bowler.BowlerState</td>
                    <td>@bowler.BowlerZip</td>
                    <td>@bowler.BowlerPhoneNumber</td>
                    <td>@bowler.Team?.TeamName</td>
                    <td><a href="@Url.Action("EditBowler", "Home", new { id = bowler.BowlerId })"><button>edit</button></a></td>

                </tr>
        }
    </tbody>

</table>